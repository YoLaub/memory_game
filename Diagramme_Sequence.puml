@startuml
' Fichier: conception/sequence_diagram_turn.puml

title Diagramme de Séquence - Un tour de jeu (sans correspondance)

actor Joueur

participant ":Game" as Game
participant "card1:Card" as Card1
participant "card2:Card" as Card2

Joueur -> Card1 : click()
activate Card1
Card1 -> Game : _handleCardClick(card1)
deactivate Card1

activate Game
Game -> Card1 : flip()
Game --> Joueur : Affiche la carte 1
deactivate Game

Joueur -> Card2 : click()
activate Card2
Card2 -> Game : _handleCardClick(card2)
deactivate Card2

activate Game
Game -> Card2 : flip()
Game --> Joueur : Affiche la carte 2

Game -> Game : _checkForMatch()
activate Game #LightBlue

alt Les cartes ne correspondent pas

    Game -> Game : _unflipCards()
    activate Game #LightGoldenRodYellow
        ' Le setTimeout est modélisé ici par une attente
        ... 1 seconde plus tard ...
        Game -> Card1 : unflip()
        Game -> Card2 : unflip()
        Game --> Joueur : Cache les deux cartes
    deactivate Game

else Les cartes correspondent
    ' ... Logique de correspondance ...
end

Game -> Game : _resetTurn()

deactivate Game
deactivate Game

@enduml